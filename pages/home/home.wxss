.main {
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content:center;
  margin-bottom: 38rpx;
}

.title-icon {
  width: 240rpx;
  height: 80rpx;
}

.welcome-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  min-height: 300rpx;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
  text-align: relative;
}

.welcome-text.highlight {
  color: rgb(43, 129, 216);
  font-weight: bold;
}

.cat-image {
  width: 150rpx;
  height: 150rpx;
  float: right;
  margin: -15rpx 0 -10rpx 20rpx;
  shape-outside: margin-box;
}

.menu-section {
  flex: 1;
  margin-top: 32rpx;
}

.error-message {
  text-align: center;
  padding: 32rpx;
  color: #e34d59;
}

.error-message text {
  display: block;
  margin-bottom: 16rpx;
}

.footer {
  margin-top: 48rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.show_privacy {
  color: #0052d9;
  margin-bottom: 16rpx;
  text-decoration: underline;
}

.steps-container {
  padding: 32rpx;
  background-color: #fff;
  margin: 20rpx 0;
}

.demo-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

/* 步骤条样式 */
.t-steps {
  padding: 20rpx 0;
}

.t-steps__item {
  flex: 1;
  position: relative;
}

.t-steps__item-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.t-steps__item-content {
  font-size: 24rpx;
  color: #666;
}

/* 已完成步骤的样式 */
.t-steps__item--finish .t-steps__item-title {
  color: #0052d9;
  font-weight: 500;
}

/* 当前步骤的样式 */
.t-steps__item--current .t-steps__item-title {
  color: #0052d9;
  font-weight: bold;
}

/* 未完成步骤的样式 */
.t-steps__item--default .t-steps__item-title {
  color: #999;
}

/* 步骤图标样式 */
.t-steps__item-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.t-steps__item--finish .t-steps__item-icon {
  background-color: #0052d9;
  color: #fff;
}

.t-steps__item--current .t-steps__item-icon {
  background-color: #0052d9;
  color: #fff;
  transform: scale(1.1);
}

.t-steps__item--default .t-steps__item-icon {
  background-color: #f5f5f5;
  color: #999;
}

.underline {
  text-decoration: underline;
  text-underline-offset: 4rpx;
}
